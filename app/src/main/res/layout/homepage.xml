<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:id="@+id/search_title"
        layout="@layout/search_layout"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">
    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_title"
        android:layout_width="363dp"
        android:layout_height="46dp"
        app:tabTextAppearance="@style/MyTabLayout"
        app:tabSelectedTextColor="@android:color/holo_red_light"
        app:tabIndicatorColor="@null"
        android:background="#F6F5F4"></android.support.design.widget.TabLayout>

        <TextView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:text="+"
            android:textSize="30dp"
            android:layout_marginLeft="340dp"
            android:textColor="#2d2d2d"
            android:background="@drawable/add_title"
            android:gravity="center"
            android:id="@+id/addTitle"
            />
    </FrameLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v4.view.ViewPager>
</LinearLayout>